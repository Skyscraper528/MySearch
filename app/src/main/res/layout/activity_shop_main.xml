<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/Linearlayout1"
              android:background="#FFF"
              android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/stepback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_marginLeft="5sp"
            android:id="@+id/shopname"
            android:textColor="#807979"
            android:textSize="16sp"/>
    </LinearLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="0.3px"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:background="@android:color/darker_gray"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="4dp">
        <ImageView
            android:id="@+id/Shop_photo"
            android:layout_width="152dp"
            android:layout_height="152dp"
            android:scaleType="centerInside"
            android:background="@mipmap/dm5"
            android:cropToPadding="true"/>

        <TextView
            android:id="@+id/shop_string"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:textColor="#312d2d"
            android:text="商家介绍"/>
    </LinearLayout>

    <ListView
        android:id="@+id/goodsview01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>


</LinearLayout>
